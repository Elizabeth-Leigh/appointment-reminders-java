{{! new.mustache }}
{{<base}}
    {{$header}}
        {{<header}}
            {{$title}}Create Appointment{{/title}}
        {{/header}}
    {{/header}}

    {{$content}}
    <h2>Create New Appointment</h2>
    <form method="post" class="form-horizontal col-lg-5" action="create">
        <div class="form-group">
            <label for="inputName" class="col-sm-4 control-label">Name</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="inputName" placeholder="Name">
            </div>
        </div>
        <div class="form-group">
            <label for="inputPhoneNumber" class="col-sm-4 control-label">Phone Number</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="inputPhoneNumber" placeholder="Phone Number">
            </div>
        </div>
        <div class="form-group">
            <label for="inputTime" class="col-sm-4 control-label">Time</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="inputTime" placeholder="Time">
            </div>
        </div>
        <div class="form-group">
            <label for="selectDelta" class="col-sm-4 control-label">Notification Time</label>
            <div class="col-sm-8">
                <select id="selectDelta" class="form-control">
                    <option>Select a time</option>
                    <option value="15">15 Minutes</option>
                    <option value="30">30 Minutes</option>
                    <option value="45">45 Minutes</option>
                    <option value="60">60 Minutes</option>
                </select>
            </div>
        </div>
        <div class="form-group">
            <label for="selectTimeZone" class="col-sm-4 control-label">Time Zone</label>
            <div class="col-sm-8">
                <select id="selectTimeZone" class="form-control">
                    {{#zones}}
                        {{#.}}
                        <option value="{{.}}">{{.}}</option>
                        {{/.}}
                    {{/zones}}
                </select>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-8">
                <button type="submit" class="btn btn-default">Create</button>
            </div>
        </div>
    </form>
    {{/content}}
{{/base}}